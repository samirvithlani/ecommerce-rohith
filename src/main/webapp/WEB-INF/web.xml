<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>InsertProductController</servlet-name>
  	<display-name>InsertProductController</display-name>
  	<description></description>
  	<servlet-class>com.ecommerce.controller.InsertProductController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProductListController</servlet-name>
  	<display-name>ProductListController</display-name>
  	<description></description>
  	<servlet-class>com.ecommerce.controller.ProductListController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SearchController</servlet-name>
  	<display-name>SearchController</display-name>
  	<description></description>
  	<servlet-class>com.ecommerce.controller.SearchController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>InsertProductController</servlet-name>
  	<url-pattern>/insertproductcontroller</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProductListController</servlet-name>
  	<url-pattern>/productlistcontroller</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SearchController</servlet-name>
  	<url-pattern>/searchcontroller</url-pattern>
  </servlet-mapping>
</web-app>
